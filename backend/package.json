{
  "name": "kerosine-invoicing-api",
  "version": "1.0.0",
  "description": "API for Kerosine Invoicing App",
  "author": "",
  "license": "ISC",
  "scripts": {
    "build": "rimraf dist && swc src -d dist --source-maps --copy-files",
    "build:tsc": "rimraf dist && tsc && tsc-alias",
    "start": "npm run build:tsc && cross-env NODE_ENV=production node dist/server.js",
    "dev": "cross-env NODE_ENV=development nodemon",
    "test": "jest --forceExit --detectOpenHandles",
    "lint": "eslint --ignore-path .gitignore --ext .ts src/",
    "lint:fix": "npm run lint -- --fix",
    "deploy:prod": "npm run build:tsc && pm2-runtime start ecosystem.config.js --only prod",
    "deploy:dev": "pm2-runtime start ecosystem.config.js --only dev",
    "typeorm": "set TS_NODE_FILES=true && node --require ts-node/register ./node_modules/typeorm/cli.js -f src/configs/ormconfig.ts",
    "typeorm:seed": "set TS_NODE_FILES=true && node --require ts-node/register ./node_modules/typeorm-seeding/dist/cli.js -n src/configs/ormconfig.ts",
    "migration:generate": "npm run typeorm -- migration:generate -n",
    "migration:revert": "npm run typeorm -- migration:revert",
    "migration:run": "npm run typeorm -- migration:run",
    "seed": "npm run typeorm:seed -- seed",
    "heroku-postbuild": "npm i -g pm2 && pm2 install pm2-logrotate && npm i @pm2/pm2-version-check"
  },
  "dependencies": {
    "@faker-js/faker": "^6.0.0-alpha.5",
    "amqplib": "^0.8.0",
    "bcrypt": "^5.0.1",
    "bluebird": "^3.7.2",
    "bottleneck": "^2.19.5",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "class-validator-jsonschema": "^3.0.2",
    "compression": "^1.7.4",
    "config": "^3.3.6",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "couponjs": "^0.8.19",
    "dotenv": "^10.0.0",
    "envalid": "^7.1.0",
    "express": "^4.17.1",
    "express-actuator": "^1.8.0",
    "express-http-context": "^1.2.4",
    "express-ipfilter": "^1.2.0",
    "express-status-monitor": "^1.3.3",
    "helmet": "^4.6.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "node-schedule": "^2.1.0",
    "otp-generator": "^4.0.0",
    "pg": "^8.7.1",
    "pluralize": "^8.0.0",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.9.0",
    "routing-controllers-openapi": "^3.0.0",
    "socket.io": "^3.1.2",
    "supertest": "^6.2.2",
    "swagger-ui-express": "^4.1.6",
    "typedi": "^0.10.0",
    "typeorm": "^0.2.41",
    "typeorm-seeding": "^1.6.1",
    "typeorm-typedi-extensions": "^0.4.1",
    "winston": "^3.5.0",
    "winston-daily-rotate-file": "^4.5.5"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.51",
    "@swc/core": "^1.2.108",
    "@types/amqplib": "^0.8.2",
    "@types/bcrypt": "^5.0.0",
    "@types/bluebird": "^3.5.36",
    "@types/compression": "^1.7.1",
    "@types/config": "^0.0.39",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.11",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/express-actuator": "^1.8.0",
    "@types/express-status-monitor": "^1.2.4",
    "@types/helmet": "^4.0.0",
    "@types/hpp": "^0.2.1",
    "@types/jest": "^26.0.24",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/lodash": "^4.14.178",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.0.1",
    "@types/node-schedule": "^1.3.2",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.4",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "cross-env": "^7.0.3",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.1",
    "jest": "^27.0.5",
    "lint-staged": "^11.0.0",
    "node-config": "^0.0.2",
    "node-gyp": "^8.1.0",
    "nodemon": "^2.0.9",
    "pm2": "^5.1.0",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "tsc-alias": "^1.4.1",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.5.2"
  }
}
